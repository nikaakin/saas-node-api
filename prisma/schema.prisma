generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// enums

enum Role {
  ADMIN
  USER
}

enum Subscription {
  FREE
  BASIC
  PREMIUM
}

// models

model User {
  id       String   @id @default(uuid())
  email    String   @unique
  name     String
  password String
  verified_at DateTime?
  companies    CompanyUser[]
}


model Company {
  id    String @id @default(uuid())
  name  String
  email String
  country String
  industry String
  verified_at DateTime?
  password String
  subscription Subscription @default(FREE)
  createdAt DateTime @default(now())
  users CompanyUser[]
}

// pivot table

model CompanyUser {
  id        String @id @default(uuid())
  companyId String
  userId    String
  role      Role
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  verified_at DateTime?
  company   Company @relation(fields: [companyId], references: [id])
  user      User @relation(fields: [userId], references: [id])
}